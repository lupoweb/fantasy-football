<div class="container">
  <div class="row mb-3">
    <div class="col-12 col-lg-5 justify-content-start align-items-start mb-lg-2">
      <h1 class="mb-2 mb-lg-0 fw-bold truncate h3">
        Welcome to the admin dashboard
      </h1>
    </div>
  </div>

  <div class="mt-4">
    <h2 class="h5">Resources</h2>

    <div class="card p-4 mb-2 flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
      <div class="d-flex flex-row justify-content-start align-items-center flex-1 mb-3 mb-md-0">
        <div class="d-flex flex-row justify-content-start align-items-center">
          <img class="me-3" style="min-width: 18px" width="18" height="18" src="https://assets.panelbear.com/static/icons/check-circle-fill.75b38293bef4.svg">
          <p class="fw-bold text-dark mb-0">Teams</p>
        </div>
      </div>
      <div class="d-flex flex-row justify-content-center align-items-center">
        <div style="min-width: 100px" class="d-flex flex-row justify-content-between align-items-center">
          <%= link_to 'New', new_admin_team_path, class: "btn btn-sm bg-white" %>
          <%= link_to 'List', admin_teams_path, class: "btn btn-sm bg-white" %>
        </div>
      </div>
    </div>

    <div class="card p-4 mb-2 flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
      <div class="d-flex flex-row justify-content-start align-items-center flex-1 mb-3 mb-md-0">
        <div class="d-flex flex-row justify-content-start align-items-center">
          <img class="me-3" style="min-width: 18px" width="18" height="18" src="https://assets.panelbear.com/static/icons/check-circle-fill.75b38293bef4.svg">
          <p class="fw-bold text-dark mb-0">Players</p>
        </div>
      </div>
      <div class="d-flex flex-row justify-content-center align-items-center">
        <div style="min-width: 100px" class="d-flex flex-row justify-content-between align-items-center">
          <%= link_to 'New', new_admin_player_path, class: "btn btn-sm bg-white" %>
          <%= link_to 'List', admin_players_path, class: "btn btn-sm bg-white" %>
        </div>
      </div>
    </div>

    <div class="card p-4 mb-2 flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
      <div class="d-flex flex-row justify-content-start align-items-center flex-1 mb-3 mb-md-0">
        <div class="d-flex flex-row justify-content-start align-items-center">
          <img class="me-3" style="min-width: 18px" width="18" height="18" src="https://assets.panelbear.com/static/icons/check-circle-fill.75b38293bef4.svg">
          <p class="fw-bold text-dark mb-0">Accounts</p>
        </div>
      </div>
      <div class="d-flex flex-row justify-content-center align-items-center">
        <p class="mb-0 me-3 mx-md-3 fs-small text-muted d-none d-md-block">
          Users of this application.
        </p>
        <div style="min-width: 100px" class="d-flex flex-row justify-content-between align-items-center">
          <%= link_to 'New', new_admin_account_path, class: "btn btn-sm bg-white" %>
          <%= link_to 'List', admin_accounts_path, class: "btn btn-sm bg-white" %>
        </div>
      </div>
    </div>
  </div>
</div>
