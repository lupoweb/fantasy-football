<div class="container">
  <div class="row mb-3">
    <div class="col-12 col-lg-5 justify-content-start align-items-start mb-lg-2">
      <h3 class="mb-2 mb-lg-0 fw-bold">
        Show Team
      </h3>
    </div>
    <div class="col-12 col-lg-auto flex-1 ms-auto justify-content-center align-items-end mb-lg-2">
      <%= render 'actions', being: 'show', team: @team %>
    </div>
  </div>
  <div class="card p-3 p-lg-4 flex-column justify-content-center align-items-between mb-2">
    <div class="container-fluid">
      <dl class="mb-4">
        <dt class="">Id</dt>
        <dd class="fs-small text-muted m-0">Technical ID in the database</dd>
        <dd class=""><%= @team.id %></dd>
      </dl>
      <dl class="mb-4">
        <dt class="">Name</dt>
        <dd class="fs-small text-muted m-0">Business ID : helps your teammates to identify this team</dd>
        <dd class=""><%= @team.name.present? ? @team.name : '<not set>' %></dd>
      </dl>

      <dl class="mb-4">
        <dt class="">Owner</dt>
        <dd class="fs-small text-muted m-0">How user will see this team</dd>
        <dd class=""><%= @team.owner.present? ? @team.owner : '<not set>' %></dd>
      </dl>

      <%= link_to 'Edit', edit_admin_team_path(@team), class: "btn btn-primary btn btn-dark btn-sm px-3" %>
      <%= link_to 'Back', admin_teams_path, class: "btn bg-white btn-sm px-3" %>
    </div>
  </div>
</div>

