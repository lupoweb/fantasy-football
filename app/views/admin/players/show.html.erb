<div class="container">
  <div class="row mb-3">
    <div class="col-12 col-lg-5 justify-content-start align-items-start mb-lg-2">
      <h3 class="mb-2 mb-lg-0 fw-bold">
        Show Player
      </h3>
    </div>
    <div class="col-12 col-lg-auto flex-1 ms-auto justify-content-center align-items-end mb-lg-2">
      <%= render 'actions', being: 'show', player: @player %>
    </div>
  </div>
  <div class="card p-3 p-lg-4 flex-column justify-content-center align-items-between mb-2">
    <div class="container-fluid">
      <dl class="mb-4">
        <dt class="">Id</dt>
        <dd class="fs-small text-muted m-0">Technical ID in the database</dd>
        <dd class=""><%= @player.id %></dd>
      </dl>
      <dl class="mb-4">
        <dt class="">Name</dt>
        <dd class="fs-small text-muted m-0">Business ID : helps your playermates to identify this player</dd>
        <dd class=""><%= @player.name.present? ? @player.name : '<not set>' %></dd>
      </dl>

      <dl class="mb-4">
        <dt class="">Role</dt>
        <dd class="fs-small text-muted m-0">Role</dd>
        <dd class=""><%= @player.role.present? ? @player.role : '<not set>' %></dd>
      </dl>

      <%= link_to 'Edit', edit_admin_player_path(@player), class: "btn btn-primary btn btn-dark btn-sm px-3" %>
      <%= link_to 'Back', admin_player_path, class: "btn bg-white btn-sm px-3" %>
    </div>
  </div>
</div>

