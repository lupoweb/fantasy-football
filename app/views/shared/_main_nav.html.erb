<nav class="navbar navbar-expand-lg navbar-light bg-white mt-1 fixed-top">
  <div class="container-fluid">
    <%= render 'shared/logo'  %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#actualNavbar" aria-controls="actualNavbar" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="actualNavbar">
      <div class="ms-auto navbar-nav">
        <% if rodauth.logged_in? %>
          <% if allowed_to?(:index?, :admin) %>
            <li><a class="nav-link fw-500 me-3 px-2" href="/admin">Admin</a></li>
          <% end %>
          <%= link_to "Profile", profile_root_path, class:"nav-link fw-500 me-3 px-2" %>
          <%= form_with url: rodauth.logout_path, method: :post, data: { turbo: false } do |form| %>
            <%= form.submit rodauth.logout_button, class: "nav-link fw-500 border-0 bg-white me-4 ms-2 ms-lg-0 mb-2 mb-lg-0 " %>
          <% end %>
        <% else %>
          <%= link_to "Sign up", rodauth.create_account_path, class:"nav-link fw-500 me-3 px-2" %>
          <%= link_to "Sign in", rodauth.login_path, class:"nav-link fw-500 me-4 px-2" %>
        <% end %>
      </div>
    </div>
</nav>

